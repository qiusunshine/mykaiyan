<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hdy.mykaiyan.Home.MainActivity"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:id="@+id/ac_main_lay"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_top_border"
        android:orientation="horizontal" >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/firstpage"
            android:textSize="13sp"
            android:id="@+id/ac_main_bot_feed"
            android:textColor="@color/text_select_dark"
            android:drawableTop="@drawable/ic_tab_strip_icon_feed_selected"
            android:gravity="center_horizontal|bottom"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/follow"
            android:id="@+id/ac_main_bot_follow"
            android:textSize="13sp"
            android:gravity="center_horizontal|bottom"
            android:textColor="@android:color/tertiary_text_light"
            android:drawableTop="@drawable/ic_tab_strip_icon_follow"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/category"
            android:id="@+id/ac_main_bot_category"
            android:textSize="13sp"
            android:gravity="center_horizontal|bottom"
            android:textColor="@android:color/tertiary_text_light"
            android:drawableTop="@drawable/ic_tab_strip_icon_category"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/profile"
            android:id="@+id/ac_main_bot_profile"
            android:textSize="13sp"
            android:gravity="center_horizontal|bottom"
            android:textColor="@android:color/tertiary_text_light"
            android:drawableTop="@drawable/ic_tab_strip_icon_profile"
            />
    </LinearLayout>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ac_main_container"
    android:layout_above="@id/ac_main_lay">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="ac_main_container"/>
</FrameLayout>

</RelativeLayout>
