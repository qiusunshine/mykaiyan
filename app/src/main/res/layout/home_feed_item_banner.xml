<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="330dp"
    xmlns:indicator="http://schemas.android.com/apk/res-auto"
    android:tag="header"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginBottom="10dp"
    android:background="@color/white">
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_action_search_white"
        android:layout_alignParentEnd="true"
        android:id="@+id/home_feed_banner_search"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_bottom_border"
        android:id="@+id/home_feed_banner_btm_rel"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:id="@+id/home_feed_banner_btm_text"
            android:text="更多开眼编辑精选"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/goto_icon"
            android:layout_toEndOf="@id/home_feed_banner_btm_text"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:tag="zoom"
        android:id="@+id/home_feed_banner_vp"
        android:layout_above="@id/home_feed_banner_btm_rel">
        </android.support.v4.view.ViewPager>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="44dp"
            android:tint="@color/white"
            android:tintMode="screen"
            android:src="@drawable/home_page_header_icon"
            android:layout_centerHorizontal="true"
            android:id="@+id/home_feed_banner_header"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="这是标题"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:id="@+id/home_feed_banner_title"
            android:layout_below="@id/home_feed_banner_header"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="这是详情"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="@color/white"
            android:id="@+id/home_feed_banner_desc"
            android:layout_below="@id/home_feed_banner_title"/>
        <com.hdy.mykaiyan.Feed.Banner.Xcircleindicator
            android:id="@+id/Xcircleindicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            indicator:circleInterval="8dp"
            indicator:fillColor="@color/white"
            indicator:radius="4dp"
            indicator:strokeColor="#cecece" />
    </RelativeLayout>

</RelativeLayout>
